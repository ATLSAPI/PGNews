@model PagedList.IPagedList<WebApplication1.Models.News>
@using PagedList;
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("news-admin"))
        {
           @Html.ActionLink("Create New", "Create")
        }
    }
</p>
@using (Html.BeginForm())
{
    <p>
        Find by Heading: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
        @Html.Raw(ViewBag.Clear)
    </p>
}
<p class="h4">@Html.Raw(ViewBag.SearchMessage)</p>
<div class="col-lg-8">
    <table class="table table-striped table-responsive">

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="/News/RetrieveImage/@item.ID" alt="" height=200 width="200" />
            </td>
            <td colspan="3">
                <div class="text-center" >
                    <p class="h4 text-center">
                        @Html.ActionLink(item.Title, "Details", new { id = item.ID })
                    </p>
                    <small class="text-center">Posted on @Html.DisplayFor(modelItem => item.ReleaseDate)</small>
                </div>
                <div class="panel-body" style="max-height: 100px;overflow-y: hidden;overflow-wrap:break-word;">
                    @Html.Raw(item.Body)
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="4">
                @if ( User.Identity.IsAuthenticated ){
                    if ( User.IsInRole("news-admin") ){
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    }
                }
            </td>
        </tr>
    }
        <tr>
            <td colspan="4">
                <h1>@Html.Raw(ViewBag.Message)</h1>
            </td>
        </tr>
        <tr>
            <td colspan="4">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
            </td>
        </tr>
        

    </table>
</div>